{
  "name": "markdown-online-editor",
  "version": "3.0.0",
  "author": "nicejade",
  "private": true,
  "description": "Arya，是一款基于 Vue、Vditor，为未来而构建的在线 Markdown 编辑器；轻量且强大：内置粘贴 HTML 自动转换为 Markdown，支持 PPT 预览，以及绘制流程图、甘特图、时序图、任务列表、五线谱，可导出携带样式的图片、PDF、微信公众号特制的 HTML 等。",
  "scripts": {
    "start": "yarn serve",
    "serve": "vue-cli-service serve --open",
    "build": "vue-cli-service build",
    "watcher": "onchange \"src/**/**/*.{js,css,scss,vue}\" -- prettier --write {{changed}}",
    "prettier": "prettier --write \"src/**/**/*.{js,css,scss,vue}\"",
    "lint": "vue-cli-service lint",
    "test": "vue-cli-service test:unit",
    "testbuild": "vue-cli-service build --mode development",
    "deploy": "bash ./commands/deploy.sh",
    "analyz": "NODE_ENV=production  npm_config_report=true npm run build",
    "clear-commit-msg": "bash ./commands/clear-commit-msg.sh",
    "eslint-fix": "eslint src/**/**/*.vue --fix",
    "format-code": "prettier-eslint --write \"src/**/*.{js,vue,css,scss}\"",
    "precommit-msg": "echo '🐉 Start pre-commit checks...' && exit 0",
    "preview": "node ./commands/preview.js"
  },
  "dependencies": {
    "canvg": "^2.0.0",
    "element-ui": "^2.12.0",
    "hint.css": "^2.6.0",
    "html2canvas": "^1.0.0-rc.3",
    "html2pdf.js": "^0.9.1",
    "lodash": "4.17.15",
    "lodash.assign": "^4.2.0",
    "lodash.clonedeep": "^4.5.0",
    "register-service-worker": "^1.0.0",
    "reveal.js": "^3.8.0",
    "vditor": "4.0.0",  // 更新版本
    "vue": "^2.6.14",  // 更新版本
    "vue-meta": "^2.4.0",  // 更新版本
    "vue-router": "^3.5.2"  // 更新版本
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.5.0",  // 更新版本
    "@vue/cli-plugin-eslint": "^4.5.0",  // 更新版本
    "@vue/cli-plugin-pwa": "^4.5.0",  // 更新版本
    "@vue/cli-plugin-unit-jest": "^4.5.0",  // 更新版本
    "@vue/cli-service": "^4.5.0",  // 更新版本
    "@vue/test-utils": "^1.0.0-beta.29",
    "babel-core": "^7.0.0",  // 更新版本
    "css-loader": "^3.4.2",
    "eslint-config-prettier": "^8.3.0",  // 更新版本
    "eslint-plugin-prettier": "^3.4.0",  // 更新版本
    "eslint-plugin-vue": "^7.0.0",  // 更新版本
    "husky": "^5.0.0",  // 更新版本
    "less": "^3.11.1",
    "less-loader": "^5.0.0",
    "lint-staged": "^10.5.0",  // 更新版本
    "onchange": "^6.1.0",
    "prettier-eslint-cli": "^5.0.0",
    "size-plugin": "^2.0.0",
    "svg-sprite-loader": "^4.1.6",
    "svgo-loader": "2.2.1",
    "vue-svg-loader": "^0.12.0",
    "vue-template-compiler": "^2.6.14",  // 更新版本
    "webpack-bundle-analyzer": "3.5.0"
  },
  "babel": {
    "presets": [
      "@vue/app"
    ]
  },
  "eslintConfig": {
    "globals": {
      "L": true
    },
    "root": true,
    "env": {
      "node": true,
      "es6": true
    },
    "rules": {
      "no-console": 0,
      "no-useless-escape": 0,
      "no-multiple-empty-lines": [
        2,
        {
          "max": 3
        }
      ],
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "semi": false,
          "trailingComma": "none",
          "bracketSpacing": true,
          "jsxBracketSameLine": true,
          "insertPragma": true,
          "requirePragma": false
        }
      ]
    },
    "plugins": [],
    "extends": [
      "plugin:vue/essential",
      "plugin:prettier/recommended",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "printWidth": 100,
    "proseWrap": "never"
  },
